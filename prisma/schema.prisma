generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  phone    String  @unique
  role     Role    @default(USER)
  orders   Order[]
}

model Order {
  id           Int      @id @default(autoincrement())
  name         String
  email        String
  phone        String
  participants Int
  date         DateTime @default(now())
  price        Int
  questId      String?
  userId       Int
  user         User     @relation(fields: [userId], references: [id])
}

enum Role {
  USER
  ADMIN
}
